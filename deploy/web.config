          <!-- <environmentVariable name="ASPOSE_AUTH_APIKEY_CUSTOM_TIMEOUT" value="5" /> -->

          <!-- JWT Authentication (Optional) -->
          <!-- <environmentVariable name="ASPOSE_AUTH_JWT_ENABLED" value="true" /> -->
